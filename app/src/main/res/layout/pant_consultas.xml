<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btn_cons_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta censo explotacion"
        style="@style/custom_style_button"/>

    <Button
        android:id="@+id/btn_cons_censo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta de un animal"
        style="@style/custom_style_button"/>

    <Button
        android:id="@+id/btn_cons_movim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta de movimientos"
        style="@style/custom_style_button"/>
</LinearLayout>